<!-- Form message start -->
<%= form_with(model: @message, local: true) do |f| %>
<!-- Form message end -->

  <!-- Label and input for sender_user_id start -->
  <!-- Input for sender_user_id start -->
  <%= f.hidden_field :sender_user_id, value: @user.id %>
  <!-- Input for sender_user_id end -->
  <!-- Label and input for sender_user_id end -->

  <!-- Label and input for message start -->
  <div class="form-group">
    <%= f.label :message %>
    <!-- Input for message start -->
    <%= f.text_area :message, rows: "3", class: "form-control" %>
    <!-- Input for message end -->
  </div>
  <!-- Label and input for message end -->

  <!-- Label and input for item_id start -->
  <div class="form-group">
    <%= f.label :item_id %>

    <!-- Input for item_id start -->
    <%= f.text_field :item_id, class: "form-control" %>
    <!-- Input for item_id end -->
  </div>
  <!-- Label and input for item_id end -->

  <%= f.submit "Create message", class: "btn btn-block btn-outline-secondary" %>
<% end %>
